@model MerchantProfileViewModel

@await Component.InvokeAsync("NToastNotify")

@{
    Layout = "_EmptyLayout";
}
<div class="container-fluid pt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card border-0">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title">Complete Your Merchant Profile - Step 2</h3>
                </div>
                <div class="card-body">
                    <form asp-action="CompleteProfile" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <input type="hidden" asp-for="MerchantId"/>
                        <input type="hidden" asp-for="Token"/>
                        
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control"/>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Logo"></label>
                            <input asp-for="Logo" type="file" class="form-control-file"/>
                            <span asp-validation-for="Logo" class="text-danger"></span>
                        </div>

                        <!-- Add other profile fields as needed -->
                        <!-- Example: Contact Number -->
                        <div class="form-group">
                            <label asp-for="ContactNumber"></label>
                            <input asp-for="ContactNumber" class="form-control"/>
                            <span asp-validation-for="ContactNumber" class="text-danger"></span>
                        </div>

                        <!-- Example: Address -->
                        <div class="form-group">
                            <label asp-for="Address"></label>
                            <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Complete Profile</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}