@model CreateBranchViewModel

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create New Branch</h4>
                <p class="card-description">
                    Create New Branch
                </p>
                <form asp-action="Create" method="post" class="forms-sample">
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label for="Branch.Name">Branch Name</label>
                        <input type="text" class="form-control" id="Branch.Name" name="Branch.Name" value="@Model.Branch.Name" required/>
                        @Html.ValidationMessageFor(m => m.Branch.Name, "", new { @class = "text-danger" })
                    </div>

                    <h5>Address Details</h5>
                    <div class="form-group">
                        <label for="Address.Street">Street</label>
                        <input type="text" class="form-control" id="Address.Street" name="Address.Street" value="@Model.Address.Street" required/>
                        @Html.ValidationMessageFor(m => m.Address.Street, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="Address.City">City</label>
                        <input type="text" class="form-control" id="Address.City" name="Address.City" value="@Model.Address.City" required/>
                        @Html.ValidationMessageFor(m => m.Address.City, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="Address.State">State</label>
                        <input type="text" class="form-control" id="Address.State" name="Address.State" value="@Model.Address.State" required/>
                        @Html.ValidationMessageFor(m => m.Address.State, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="Address.PostalCode">Postal Code</label>
                        <input type="text" class="form-control" id="Address.PostalCode" name="Address.PostalCode" value="@Model.Address.PostalCode" required/>
                        @Html.ValidationMessageFor(m => m.Address.PostalCode, "", new { @class = "text-danger" })
                    </div>

                    <button type="submit" class="btn btn-primary me-2">Create</button>
                    <a href="@Url.Action("Index", "Merchant", new { area = "Admin" })" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
