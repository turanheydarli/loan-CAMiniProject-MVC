@model CreateEmployeeViewModel

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create New Employee</h4>
                <p class="card-description">
                    Enter the details to create a new employee.
                </p>
                <form asp-action="Create" method="post" class="forms-sample">
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label for="Employee.FirstName">First Name</label>
                        <input type="text" class="form-control" id="Employee.FirstName" name="Employee.FirstName" value="@Model.Employee.FirstName" required/>
                        @Html.ValidationMessageFor(m => m.Employee.FirstName, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="Employee.LastName">Last Name</label>
                        <input type="text" class="form-control" id="Employee.LastName" name="Employee.LastName" value="@Model.Employee.LastName" required/>
                        @Html.ValidationMessageFor(m => m.Employee.LastName, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="Employee.Email">Email</label>
                        <input type="email" class="form-control" id="Employee.Email" name="Employee.Email" value="@Model.Employee.Email" required/>
                        @Html.ValidationMessageFor(m => m.Employee.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="Employee.Position">Position</label>
                        <input type="text" class="form-control" id="Employee.Position" name="Employee.Position" value="@Model.Employee.Position" required/>
                        @Html.ValidationMessageFor(m => m.Employee.Position, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="BranchId">Branch</label>
                        <select class="form-control" id="BranchId" name="BranchId" required>
                            <option value="">-- Select Branch --</option>
                            @foreach (var branch in Model.Branches)
                            {
                                <option value="@branch.Id">@branch.Name</option>
                            }
                        </select>
                        @Html.ValidationMessageFor(m => m.BranchId, "", new { @class = "text-danger" })
                    </div>

                    <button type="submit" class="btn btn-primary me-2">Create</button>
                    <a href="@Url.Action("Index", "Employee")" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

    <script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>
}